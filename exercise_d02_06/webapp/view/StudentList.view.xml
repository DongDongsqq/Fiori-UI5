<mvc:View
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>    <ScrollContainer width="100%" height="100%" vertical="true">
        <List headerText="{i18n>StudentListTitle}" class="sapUiResponsiveMargin" width="auto" items="{student>/Students}">
            <items>
                <ObjectListItem
                core:require="{
                    Formatter: 'sync/d02/exercised0206/model/formatter'
                }"
                    title="{student>name}"
                    icon="{= ${student>gender} === 'ë‚¨' ? 'sap-icon://male' : 'sap-icon://female' }"
                    number="{
                        path: 'student>birthdate',
                        formatter: 'Formatter.formatDate'
                    }">
                    <markers>
                        <ObjectMarker
                            type="{
                                path: 'student>birthdate',
                                formatter: 'Formatter.statusText'
                            }"/>
                    </markers>
                </ObjectListItem>
            </items>
        </List>
    </ScrollContainer>
</mvc:View>

