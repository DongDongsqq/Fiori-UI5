<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="UpdateDialog" title="Selected Data">
        <content>
        <FlexBox direction="Column">
<Text text="Name"></Text>
<Input width="60%" value="{updateview>/Carrname}"></Input>
<Text text="Url"></Text>
<Input width="60%" value="{updateview>/Url}"></Input>

</FlexBox>
        </content>
        <beginButton>
            <Button text="Close" press=".onCloseDialog"/>
        </beginButton>
        <endButton>
            <Button text="Update" press=".onUpdate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>